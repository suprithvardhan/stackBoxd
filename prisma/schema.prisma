// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  username      String    @unique
  displayName   String
  bio           String?   @db.Text
  avatarUrl     String?
  githubUrl     String?
  websiteUrl    String?
  twitterUrl    String?
  email         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  logs          Log[]
  projects      Project[]
  lists         List[]
  followers     Follow[]  @relation("UserFollowers")
  following     Follow[]  @relation("UserFollowing")
  reactions     Reaction[]
  comments      Comment[]

  @@index([username])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Tool {
  id            String   @id @default(cuid())
  slug          String   @unique
  name          String
  icon          String   // iconify id
  site          String?
  category      String
  color         String?
  avgRating     Float    @default(0)
  ratingsCount  Int      @default(0)
  usedByCount   Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  logs          Log[]
  listItems     ListItem[]
  projectTools  ProjectTool[]

  @@index([slug])
  @@index([category])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  displayName String?
  tagline     String?
  description String?  @db.Text
  about       String?  @db.Text
  coverImage  String?
  repoUrl     String
  demoUrl     String?
  stars       Int      @default(0)
  reflection  String?  @db.Text
  authorId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  tools       ProjectTool[]
  logs        Log[]
  highlights  ProjectHighlight[]

  @@index([authorId])
}

model ProjectHighlight {
  id        String   @id @default(cuid())
  projectId String
  text      String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model ProjectTool {
  id        String   @id @default(cuid())
  projectId String
  toolId    String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([projectId, toolId])
  @@index([projectId])
  @@index([toolId])
}

model Log {
  id          String   @id @default(cuid())
  userId      String
  toolId      String
  rating      Int
  review      String   @db.Text
  tags        String[]
  projectId   String?
  visibility  String   @default("public") // "public" | "private"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tool        Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  reactions   Reaction[]
  comments    Comment[]

  @@index([userId])
  @@index([toolId])
  @@index([projectId])
  @@index([createdAt])
}

model List {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  cover       String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       ListItem[]

  @@index([userId])
}

model ListItem {
  id        String   @id @default(cuid())
  listId    String
  toolId    String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  list      List     @relation(fields: [listId], references: [id], onDelete: Cascade)
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([listId, toolId])
  @@index([listId])
  @@index([toolId])
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower    User     @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model Reaction {
  id        String   @id @default(cuid())
  userId    String
  logId     String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  log       Log      @relation(fields: [logId], references: [id], onDelete: Cascade)

  @@unique([userId, logId])
  @@index([logId])
  @@index([userId])
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  logId     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  log       Log      @relation(fields: [logId], references: [id], onDelete: Cascade)

  @@index([logId])
  @@index([userId])
}

